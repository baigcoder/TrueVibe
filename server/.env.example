# Environment
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/truevibe
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/truevibe?retryWrites=true&w=majority

# Redis (Redis Cloud)
# Format: redis://default:<password>@<host>:<port>
REDIS_URL=redis://default:yourpassword@redis-10534.c61.us-east-1-3.ec2.cloud.redislabs.com:10534

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AI Deepfake Detection
AI_SERVICE_URL=http://localhost:8000/analyze
AI_SERVICE_API_KEY=your-ai-service-key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# LLM API Keys (for AI Report Generation)
GEMINI_API_KEY=your-gemini-api-key
GPT5_API_KEY=your-chatanywhere-api-key
GROQ_API_KEY=your-groq-api-key

# Email SMTP Configuration (for PDF Report Email)
# Gmail example: Enable "Less secure apps" or use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=TrueVibe <noreply@truevibe.app>
